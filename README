# Installation

    apt-get install libldap2-dev python-dev libmysqlclient-dev libsasl2-dev
    virtualenv venv
    . venv/bin/activate
    pip install -r requirements.txt
    cp userinfosite/settings-sample.py userinfosite/settings.py
    python manage.py syncdb
    # create the radius database tables, if they don't exist already
    python manage.py syncdb --database=radius
    python manage.py runserver

# Apache:
 - Make a Vhost
 - add WSGIScriptAlias / /path/to/project/neuf-userinfo/userinfosite/wsgi.py
